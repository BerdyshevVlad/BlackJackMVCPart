@{
    ViewBag.Title = "Start";
}


<div id="result">
    <h2>Start</h2>
    <div class="form-group mx-sm-3 mb-2">
        <label class="sr-only">Choose number of boots!</label>
        <input id="botCount" type="number" name="botCount" min="1" max="5" class="form-control botCount" placeholder="Enter bot number...">
        <input id="userName" type="text" name="userName" class="form-control userName" placeholder="Enter name...">
    </div>
    <div id="errorBotCountMessage" class="errorBotCountMessage"></div>
    <input id="confirm" type="submit" class="btn btn-primary mb-2 myConfirm" value="Confirm" onclick="OnConfirm()" />
</div>

<button type="button" class="btn btn-success" id="more" onclick="OnMore()">More</button>
<button type="button" class="btn btn-success" id="enough" onclick="OnEnough()">Enough</button>

@Scripts.Render("~/scripts/jquery-3.3.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")